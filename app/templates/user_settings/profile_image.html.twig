{% extends 'base.html.twig' %}

{% block title %}Profile{% endblock %}

{% block breadcrumbs %}/ Profile image{% endblock %}

{% block body %}
    {{ include ('user_settings/_settings_profile_tabs.html.twig') }}

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="flex items-center">
        {{ include ('shared/_avatar.html.twig', {'size': 32, profile: app.user.userProfile}) }}

        <div class="ml-16">
            {{ form_widget(form.profileImage) }}
            {{ form_errors(form.profileImage) }}
        </div>
    </div>

    <div>
        <button type="submit" class="block w-full shadow-sm border-transparent bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-400 text-white rounded-md border p-2 mt-4 mb-2">
            Save
        </button>
    </div>

    {{ form_end(form) }}
{% endblock %}
