{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    {% if app.user.id != targetUser.id %}
        {% if app.user.follows is defined and not app.user.follows.contains(targetUser) %}
            <a href="{{ path('app_follow', {id: targetUser.id}) }}" class="rounded-md border p-2 border-gray-300 text-gray-600 hover:bg-gray-300">Follow</a>
        {% else %}
            <a href="{{ path('app_unfollow', {id: targetUser.id}) }}" class="rounded-md border p-2 border-gray-300 text-gray-600 hover:bg-gray-300">Unfollow</a>
        {% endif %}
    {% endif %}
{% endif %}